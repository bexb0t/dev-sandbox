<configuration>
    <appender name="FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <!-- Log file location -->
        <file>logs/${spring.application.name}.log</file>

        <!-- Log file rolling policy -->
        <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
            <!-- Log file name pattern -->
            <fileNamePattern>logs/${spring.application.name}-%d{yyyy-MM-dd}.%i.log</fileNamePattern>

            <!-- Maximum size of a single log file before rolling -->
            <maxFileSize>10MB</maxFileSize>

            <!-- Maximum number of rolled files to keep -->
            <maxHistory>30</maxHistory>
        </rollingPolicy>

        <!-- Log file layout pattern -->
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- Root logger configuration -->
    <root level="info">
        <appender-ref ref="FILE" />
    </root>
</configuration>
